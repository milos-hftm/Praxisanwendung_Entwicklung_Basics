<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.hftm.controller.FormularController" maxWidth="Infinity" maxHeight="Infinity">

    <!-- Top: Titel und Suche/Filter -->
    <top>
        <VBox spacing="18" styleClass="page-header">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button text="← Zurück" onAction="#handleBack" styleClass="button-secondary" style="-fx-padding: 8 12 8 12;"/>
                <Label text="Formularverwaltung" styleClass="header-title"/>
            </HBox>
            <HBox spacing="12" alignment="CENTER_LEFT" styleClass="filter-bar">
                <TextField fx:id="searchField" promptText="Suche nach Typ..." prefWidth="320"/>
                <Button text="Suchen" onAction="#handleSearch" styleClass="button-primary"/>
                <CheckBox fx:id="nurOffeneCheckBox" text="Nur ausstehende Formulare" onAction="#handleFilterToggle"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Tabelle -->
    <center>
        <TableView fx:id="formularTable">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
            <columns>
                <TableColumn fx:id="formularIdColumn" text="ID" prefWidth="60"/>
                <TableColumn fx:id="typColumn" text="Typ" prefWidth="160"/>
                <TableColumn fx:id="ausgabedatumColumn" text="Ausgabe" prefWidth="120"/>
                <TableColumn fx:id="rueckgabedatumColumn" text="Rückgabe" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="140"/>
                <TableColumn fx:id="mitgliedIdColumn" text="Mitglied-ID" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- Right: Formular-Details -->
    <right>
        <VBox spacing="18" style="-fx-background-color: white; -fx-padding: 25; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 0 1;" prefWidth="360">
            <Label text="Formular Details" style="-fx-font-size: 18px; -fx-text-fill: #1a1a1a; -fx-font-weight: bold;"/>

            <VBox spacing="5">
                <Label text="Typ:"/>
                <TextField fx:id="typField" promptText="ANMELDUNG / FEEDBACK / ..."/>
            </VBox>

            <VBox spacing="5">
                <Label text="Ausgabedatum:"/>
                <DatePicker fx:id="ausgabedatumPicker"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Rückgabedatum:"/>
                <DatePicker fx:id="rueckgabedatumPicker"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Status:"/>
                <ComboBox fx:id="statusCombo" maxWidth="Infinity"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Mitglied-ID:"/>
                <TextField fx:id="mitgliedIdField" promptText="z. B. 5"/>
            </VBox>

            <Separator/>
            <VBox spacing="12">
                <Button fx:id="saveButton" text="Neu speichern" onAction="#handleSave" maxWidth="Infinity" styleClass="button-primary"/>
                <Button fx:id="updateButton" text="Aktualisieren" onAction="#handleUpdate" maxWidth="Infinity" styleClass="button" disable="true"/>
                <Button fx:id="deleteButton" text="Löschen" onAction="#handleDelete" maxWidth="Infinity" styleClass="button-danger" disable="true"/>
                <Button fx:id="clearButton" text="Felder leeren" onAction="#handleClear" maxWidth="Infinity" styleClass="button-secondary"/>
            </VBox>

            <Separator/>

            <VBox spacing="10">
                <Label text="Dokument (PDF)" style="-fx-font-size: 14px; -fx-font-weight: 700; -fx-text-fill: #1a1a1a;"/>
                <Label fx:id="pdfStatusLabel" text="PDF: -" style="-fx-text-fill: #555;"/>
                <HBox spacing="10">
                    <Button fx:id="pdfOpenButton" text="PDF öffnen" onAction="#handlePdfOpen" maxWidth="Infinity" styleClass="button" HBox.hgrow="ALWAYS" disable="true"/>
                    <Button fx:id="pdfAttachButton" text="PDF hinzufügen" onAction="#handlePdfAttach" maxWidth="Infinity" styleClass="button-secondary" HBox.hgrow="ALWAYS" disable="true"/>
                </HBox>
                <Label text="Hinweis: PDFs werden lokal gespeichert (pro Formular-ID)." wrapText="true" style="-fx-font-size: 11px; -fx-text-fill: #777;"/>
            </VBox>
        </VBox>
    </right>



</BorderPane>
